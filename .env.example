# =============================================================================
# JANIS Agentic Deep Researcher - Unified Environment Configuration
# =============================================================================
# Copy this file to .env in the project root and fill in your values
# Both backend and frontend will read from this file
# =============================================================================

# -----------------------------------------------------------------------------
# LangGraph Configuration
# -----------------------------------------------------------------------------
# Set this to allow blocking operations (like Denario imports) in background jobs
# This is needed because Denario's dependency chain (cmbagent -> autogen -> jsonschema)
# has blocking filesystem operations during import
BG_JOB_ISOLATED_LOOPS=true

# -----------------------------------------------------------------------------
# Backend: LLM API Keys
# -----------------------------------------------------------------------------

# OpenAI (required for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (required for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google (required for Gemini models)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI-Compatible Base URL (Optional)
# If set, all models (OpenAI, Anthropic, Google) will use this endpoint
# Useful for proxy services like OpenRouter, Together AI, or self-hosted proxies
# Example: OPENAI_BASE_URL=https://api.openrouter.ai/v1
# Example: OPENAI_BASE_URL=http://localhost:8000/v1
# Leave empty to use native APIs for each provider
OPENAI_BASE_URL=

# -----------------------------------------------------------------------------
# Backend: LangChain & LangGraph Configuration
# -----------------------------------------------------------------------------

# LangSmith (optional, for tracing)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=janis-researcher

# LangGraph Studio (optional)
LANGGRAPH_API_KEY=your_langgraph_api_key_here

# -----------------------------------------------------------------------------
# Frontend: Next.js Configuration
# -----------------------------------------------------------------------------

# LangGraph Agent Deployment URL (required for frontend)
# Backend server URL where LangGraph Studio is running
NEXT_PUBLIC_DEPLOYMENT_URL=http://127.0.0.1:2024

# LangGraph Agent ID (required for frontend)
# Get this from backend/langgraph.json under the graph name
NEXT_PUBLIC_AGENT_ID=outline-agent

# LangSmith API Key (optional, for frontend auth)
NEXT_PUBLIC_LANGSMITH_API_KEY=your_langsmith_api_key_here

# -----------------------------------------------------------------------------
# Orchestrator Configuration (Optional)
# -----------------------------------------------------------------------------

# Tavily API Key (for orchestrator research)
TAVILY_API_KEY=tvly-xxxxx

# Token Tracking (for orchestrator)
TOKEN_TRACKING_LIBRARY=langfuse

# Langfuse Configuration (for orchestrator)
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_BASE_URL=https://us.cloud.langfuse.com
